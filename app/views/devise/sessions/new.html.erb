<div class="container-log_in">
  <div class="banner-log_in" style="background-image: linear-gradient(336deg, rgba(32,70,245,.8), rgba(32,70,245,0) 70.71%), url('https://images.unsplash.com/photo-1513883049090-d0b7439799bf?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=46cc414a0ca765c8a0f936f7ef01155a&auto=format&fit=crop&w=800&q=60');">
  <div class="form-log_in">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 class="log-title">Log in!</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-log_in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
