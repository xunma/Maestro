<div class="container dashboard">
  <div class="dashboard-main-header">
    <h1>Matching Rooms</h1>
  </div>
    <div class="row">

        <% @rooms.each do |room| %>
          <div class="col-xs-6 col-sm-4">
            <div class="card">
              <% if room.room_images.count > 0 %>
                <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path(room.room_images[0].image) %>);">
                </div>
              <% else %>
                <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1526142684086-7ebd69df27a5?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f5767f515cad13d5aa42559ec8bb9a55&auto=format&fit=crop&w=1950&q=80');">
                </div>
              <% end %>

              <div class="card-description">
                <h3>Play the <%= room.instrument_type %></h3>
                <p>Host: <%= User.find(room.user_id).first_name %></p>
                <p>Location: <%= room.location %></p>
                <p>Rental price:
                <% if ['Shanghai', 'Chengdu', 'Beijing'].include?(room.location) %>
                  ¥
                <% elsif room.location == 'Hong Kong' %>
                  HK$
                <% elsif room.location == 'Seoul' %>
                  ₩
                <% else %>
                  €
                <% end %>
                 <%= room.price %>/hr</p>
              </div>

              <div class="card-links">
                <%= link_to "More info", room_path(room), class: "btn btn-card" %>
                <%= link_to "Book", new_room_booking_path(room), class: "btn btn-card" %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
</div>
