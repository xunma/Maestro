<div class="container">
  <% if @room.room_images.count > 0 %>
    <div class="row">
      <% @room.room_images.each do |image| %>
        <div class="col-xs-4">
          <%= cl_image_tag(image.image,
        width: 400, height: 300, crop: :fill) %>
          <% if @room.user == current_user %>
            <%= link_to 'Delete Image', room_room_image_path(@room, image), method: :delete %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1526142684086-7ebd69df27a5?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f5767f515cad13d5aa42559ec8bb9a55&auto=format&fit=crop&w=1950&q=80');">
    </div>
      <% if @room.user == current_user %>
        <%= link_to "Upload an image", edit_room_path(@room) %>
      <% end %>
  <% end %>

  <div class="container">
    <h1>Your <%= @room.instrument_type %> in <%= @room.location %></h1>
    <br>Space's description: <%= @room.description %><br>
    <h4><i class="fas fa-map-marker-alt"></i> <%= @room.location %></h4><br>

    <% if @room.user == current_user %>
      <%= link_to "Edit", edit_room_path(@room), class: "btn btn-card" %>
      <%= link_to "Delete", method: :delete, class: "btn btn-card" %>
    <% else %>
      <%= link_to "Book", new_room_booking_path(@room), class: "btn btn-card" %>
    <% end %>

    <h4>Price: <%= @room.price %> <%= @room.currency %> per hour</h4><br>

    <%= link_to '< Back home', rooms_path %>
  </div>

</div>
