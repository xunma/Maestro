<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Search", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Browse", rooms_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Hosting", my_rooms_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Dashboard", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.avatar.url != nil %>
            <%= cl_image_tag current_user.avatar.url(:navbar_image),  "data-toggle" => "dropdown" %>
          <% else %>
            <%= link_to '', "data-toggle" => "dropdown" do %>
              <i class="fas fa-user" style='color: #0000b3' ></i>
            <% end %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profile_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Create account", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
</div>

